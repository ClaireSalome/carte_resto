<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/profile_activity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme" />

    <TextView
        android:id="@+id/blank1"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_below="@+id/toolbar" />

    <TextView
        android:id="@+id/nom"
        android:layout_width="130dp"
        android:layout_height="60dp"
        android:layout_below="@+id/blank1"
        android:text="@string/nom"
        android:gravity="center_vertical"
        android:textSize="20dp"
        android:textColor="#000000"/>
    <TextView
        android:id="@+id/blank2"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_below="@+id/nom" />


    <TextView
        android:id="@+id/prenom"
        android:layout_width="130dp"
        android:layout_height="60dp"
        android:layout_below="@+id/blank2"
        android:text="@string/prenom"
        android:gravity="center_vertical"
        android:textSize="20dp"
        android:textColor="#000000"/>
    <TextView
        android:id="@+id/blank3"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_below="@+id/prenom" />

    <TextView
        android:id="@+id/pseudo"
        android:layout_width="130dp"
        android:layout_height="60dp"
        android:layout_below="@+id/blank3"
        android:text="@string/pseudo"
        android:gravity="center_vertical"
        android:textSize="20dp"
        android:textColor="#000000"/>
    <TextView
        android:id="@+id/blank4"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_below="@+id/pseudo" />

    <TextView
        android:id="@+id/email"
        android:layout_width="130dp"
        android:layout_height="60dp"
        android:layout_below="@+id/blank4"
        android:text="@string/email"
        android:gravity="center_vertical"
        android:textSize="20dp"
        android:textColor="#000000"/>
    <TextView
        android:id="@+id/blank5"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_below="@+id/email" />

    <TextView
        android:id="@+id/mot2passe"
        android:layout_width="130dp"
        android:layout_height="60dp"
        android:layout_below="@+id/blank5"
        android:text="@string/mot2passe"
        android:gravity="center_vertical"
        android:textSize="20dp"
        android:textColor="#000000"/>
    <TextView
        android:id="@+id/blank6"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_below="@+id/mot2passe" />

    <TextView
        android:id="@+id/edit_nom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/blank1"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/nom"
        android:layout_toEndOf="@+id/nom"
        android:layout_above="@+id/blank2"
        android:background="@drawable/border"/>

    <TextView
        android:id="@+id/edit_prenom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/blank2"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/prenom"
        android:layout_toEndOf="@+id/prenom"
        android:layout_above="@+id/blank3"
        android:background="@drawable/border"/>

    <TextView
        android:id="@+id/edit_pseudo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/blank3"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/pseudo"
        android:layout_toEndOf="@+id/pseudo"
        android:layout_above="@+id/blank4"
        android:background="@drawable/border"/>

    <TextView
        android:id="@+id/edit_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/blank4"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/email"
        android:layout_toEndOf="@+id/email"
        android:layout_above="@+id/blank5"
        android:background="@drawable/border"/>

    <TextView
        android:id="@+id/edit_mdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/blank5"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/mot2passe"
        android:layout_toEndOf="@+id/mot2passe"
        android:layout_above="@+id/blank6"
        android:background="@drawable/border"/>

</RelativeLayout>