<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:id="@+id/modif_frag">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/profile">

    <TextView
        android:id="@+id/blank1"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_below="@+id/toolbar" />

    <TextView
        android:id="@+id/nom"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_below="@+id/blank1"
        android:text="@string/nom"
        android:gravity="center_vertical"
        android:textSize="20dp"
        android:textColor="#000000"/>
    <TextView
        android:id="@+id/blank2"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_below="@+id/nom" />


    <TextView
        android:id="@+id/prenom"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_below="@+id/blank2"
        android:text="@string/prenom"
        android:gravity="center_vertical"
        android:textSize="20dp"
        android:textColor="#000000"/>
    <TextView
        android:id="@+id/blank3"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_below="@+id/prenom" />

    <TextView
        android:id="@+id/pseudo"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_below="@+id/blank3"
        android:text="@string/pseudo"
        android:gravity="center_vertical"
        android:textSize="20dp"
        android:textColor="#000000"/>
    <TextView
        android:id="@+id/blank4"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_below="@+id/pseudo" />

    <TextView
        android:id="@+id/email"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_below="@+id/blank4"
        android:text="@string/email"
        android:gravity="center_vertical"
        android:textSize="20dp"
        android:textColor="#000000"/>
    <TextView
        android:id="@+id/blank5"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_below="@+id/email" />

    <TextView
        android:id="@+id/mot2passe"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_below="@+id/blank5"
        android:text="@string/mot2passe"
        android:gravity="center_vertical"
        android:textSize="20dp"
        android:textColor="#000000"/>
    <TextView
        android:id="@+id/blank6"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_below="@+id/mot2passe" />

    <EditText
        android:id="@+id/edit_nom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/blank1"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/nom"
        android:layout_toEndOf="@+id/nom"
        android:layout_above="@+id/blank2"
        android:inputType="textPersonName"
        android:hint="@string/nom"
        android:textColor="#000000"/>

    <EditText
        android:id="@+id/edit_prenom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/blank2"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/prenom"
        android:layout_toEndOf="@+id/prenom"
        android:layout_above="@+id/blank3"
        android:inputType="textPersonName"
        android:hint="@string/prenom"
        android:textColor="#000000"/>
    <EditText
        android:id="@+id/edit_pseudo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/blank3"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/pseudo"
        android:layout_toEndOf="@+id/pseudo"
        android:layout_above="@+id/blank4"
        android:hint="@string/pseudo"
        android:inputType="text"
        android:textColor="#000000"/>

    <EditText
        android:id="@+id/edit_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/blank4"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/email"
        android:layout_toEndOf="@+id/email"
        android:layout_above="@+id/blank5"
        android:inputType="textEmailAddress"
        android:hint="@string/email"
        android:textColor="#000000"/>

    <EditText
        android:id="@+id/edit_mdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/blank5"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/mot2passe"
        android:layout_toEndOf="@+id/mot2passe"
        android:layout_above="@+id/blank6"
        android:inputType="textWebPassword"
        android:hint="@string/mot2passe"
        android:textColor="#000000"/>


    <Button
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:gravity="center"
        android:layout_marginLeft="65dp"
        android:layout_below="@id/blank6"
        android:text="MODIFIER"
        android:textSize="25dp"
        android:background="@drawable/border"
        android:textColor="#000000"/>

</RelativeLayout>
</ScrollView>