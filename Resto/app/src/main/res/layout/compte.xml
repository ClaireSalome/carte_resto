<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme" />

    <include layout="@layout/header"></include>

    <TextView
        android:id="@+id/blank"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_below="@+id/toolbar"/>

    <TextView
        android:id="@+id/connexion"
        android:layout_width="match_parent"
        android:layout_height= "wrap_content"
        android:layout_weight="0.05"
        android:text="@string/connexion"
        android:textSize="80sp"
        android:gravity="center"
        android:textColor="#000000"
        android:layout_below="@+id/blank"/>
    <TextView
        android:id="@+id/blank1"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_below="@+id/connexion"/>

    <TextView
        android:id="@+id/texte1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/membre"
        android:textSize="30sp"
        android:textColor="#000000"
        android:gravity="center_horizontal"
        android:layout_below="@+id/blank1"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_below="@+id/texte1"
        android:id="@+id/blank4"/>
    <Button
        android:id="@+id/login"
        android:layout_width="182dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/login"
        android:textSize="20sp"
        android:textColor="#000000"
        android:layout_below="@+id/blank4"
        android:layout_alignRight="@+id/compte"
        android:layout_alignEnd="@+id/compte"
        android:layout_marginRight="13dp"
        android:layout_marginEnd="13dp" />
    <TextView
        android:id="@+id/blank2"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_weight="0.05"
        android:layout_below="@id/login"/>

    <TextView
        android:id="@+id/texte2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/newMembre"
        android:textSize="30sp"
        android:gravity="center_horizontal"
        android:textColor="#000000"
        android:layout_below="@+id/blank2"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_below="@+id/texte2"
        android:id="@+id/blank5"/>
    <Button
        android:id="@+id/compte"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Inscription"
        android:textSize="20sp"
        android:layout_below="@+id/blank5"
        android:layout_centerHorizontal="true" />
    <TextView
        android:layout_width="match_parent"
        android:textColor="#000000"
        android:layout_height="32dp"
        android:layout_weight="0.1"
        android:id="@id/blank3"
        android:layout_below="@id/compte"/>


</RelativeLayout>
