<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:id="@+id/fidelite_activity">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme" />

    <include layout="@layout/header"></include>

    <TextView
        android:id="@+id/blank"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_below="@+id/toolbar"/>

    <TextView
        android:id="@+id/texte_fidelite"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/blank"
        android:text="@string/texte_fidelite"
        android:gravity="center_vertical"
        android:textColor="#000000"
        android:textSize="20dp"/>
    <EditText
        android:id="@+id/nbrPoints"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_below="@+id/blank"
        android:layout_toRightOf="@+id/texte_fidelite"
        android:textColor="#000000"
        android:gravity="center_vertical"
        android:textSize="20dp"/>
    <TextView
        android:id="@+id/texte_suite1"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="@string/texte_fidelite_suite"
        android:textColor="#000000"
        android:layout_toRightOf="@+id/nbrPoints"
        android:layout_below="@+id/blank"
        android:gravity="center_vertical"
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/blank1"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_below="@+id/texte_fidelite"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="@string/texte_fidelite_suite2"
        android:textColor="#000000"
        android:gravity="center_vertical"
        android:layout_below="@+id/blank1"
        android:textSize="20dp"/>

</RelativeLayout>
</ScrollView>